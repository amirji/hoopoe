@Article{kroupa2001,
  Title                    = {{On the variation of the initial mass function}},
  Author                   = {{Kroupa}, P.},
  Journal                  = {\mnras},
  Year                     = {2001},

  Month                    = apr,
  Pages                    = {231-246},
  Volume                   = {322},

  Abstract                 = {A universal initial mass function (IMF) is not intuitive,
 but so far no convincing evidence for a variable IMF
 exists. The detection of systematic variations of the IMF
 with star-forming conditions would be the Rosetta Stone for
 star formation. In this contribution an average or
 Galactic-field IMF is defined, stressing that there is
 evidence for a change in the power-law index at only two
 masses: near 0.5Msolar and near 0.08Msolar. Using this
 supposed universal IMF, the uncertainty inherent in any
 observational estimate of the IMF is investigated by
