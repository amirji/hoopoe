@Article{subr&haas2016,
  Title                    = {{The Properties of Hypervelocity Stars and S-stars Originating from an Eccentric Disk around a Supermassive Black Hole}},
  Author                   = {{{\v S}ubr}, L. and {Haas}, J.},
